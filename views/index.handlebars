<div id="page" class="container-fluid">
  <div class="row">
      <h1 id="maintitle">Pizza Party!</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="listtitles">Pizzas not eaten</h2>
        <ul>
          {{#each pizzas}}
            {{#unless devoured}}
              <li>
              <img src="/assets/img/pizzaIcon.png" style="height: 30px; width: 30px;">
              {{pizza_name}}
              <button id="eatItBtn" class="change-Dev btn" data-id="{{id}}" data-newdev="true">
                EAT IT!!!
              </button>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h2 class="listtitles">Pizzas Eaten</h2>
        <ul>
          {{#each pizzas}}
            {{#if devoured}}
              <li>
              <img src="/assets/img/pizzaIcon.png" style="height: 30px; width: 30px;">
              {{pizza_name}}
              <button class="change-Dev btn btn-success" data-id="{{id}}" data-newdev="false" disabled>
                MMM TASTY!
              </button>
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h2 id="form-title">Make a Pizza</h2>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-12">
        <form class="create-form">
          <div class="form-group">
            <label for="ca">Pizza Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <br>
          <div class="form-group">
            <label for="pizza">Did you eat it?</label>
            <br><br>
            <input type="radio" name="devoured" value="1" checked> I ATE IT!
            <br>
            <input type="radio" name="devoured" value="0"> NO I DID NOT EAT IT!
          </div>
          <button class="btn btn-large" id="submitBtn" type="submit">Add Pizza</button>
        </form>
      </div>
    </div>
  </div>
</div>


