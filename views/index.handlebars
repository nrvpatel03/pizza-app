<h1>Pizzas</h1>

<h2>Pizzas not eaten</h2>

<ul>
  {{#each pizzas}}
    {{#unless devoured}}
      {{> pizzas/pizza-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Pizzas Eaten</h2>

<ul>
  {{#each pizzas}}
    {{#if devoured}}
      {{> pizzas/pizza-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Pizza</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Pizza Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="pizza">Pizza</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Pizza</button>
</form>
